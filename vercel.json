{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {"runtime": "python3.9"}
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/app.py"
        }
    ],
    "build": {
        "env": {
          "PIP_NO_BINARY": "ffmpeg-python"
        },
        "commands": [
            "apt-get update",
            "apt-get install -y ffmpeg"
        ]
    }
}
